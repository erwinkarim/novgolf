- content_for(:head){ "#{@user.name || @user.email} Reviews -" }
.container
  .row
    .col-12
      %ol.breadcrumb
        %li.breadcrumb-item
          %a{ :href => user_path(@user)} #{@user.name || @user.email}
        %li.breadcrumb-item.active Reviews
  .row
    .col-12.col-md-8
      = react_component "ReviewList", {reviews_path:user_reviews_path(params[:user_id]), displayMode:'reviewer', showHeader:true, linkHeader:false}

.jumbotron.jumbotron-fluid{ :style => "height:100vh; background:url(images/front.jpg); background-size:cover; color:white; text-shadow: 2px 2px 2px #0000"}
  .container
    %h1.display-3.text-shadow Jom Golf
    %p.lead.text-shadow Easily get your golf reservations
    .row#query-form
      = react_component "QueryForm", { crsfToken: form_authenticity_token, queryString:"",
        queryTarget: search_path,
        queryDate:params.has_key?(:date) ? params[:date] : "#{1.day.from_now.strftime('%e/%m/%Y')}",
        queryTime:params.has_key?(:time) ?  params[:time] : "07:00",
        dropShadow:true }
.container
  .row
    .col-xs-12.col-md-4
      %img.img-responsive.img-rounded{ src:'images/golf_club_join/front-page-icon.jpeg'}
    .col-xs-12.col-md-8{ :sytle => "min-height:256px; height:256px;"}
      .card.card-block
        %h4.card-title Golf Club Owner?
        %p Contact us to have your club listed
        %a.card-link.btn.btn-primary{ :href => join_golf_clubs_path } More Info

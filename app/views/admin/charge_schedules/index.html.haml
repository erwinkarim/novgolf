- content_for(:head){"Charge Schedules for #{@golf_club.name} -"}
.container
  .row
    .col-xs-12
      %ol.breadcrumb
        %li.breadcrumb-item
          %a{ :href => admin_golf_clubs_path} Admin
        %li.breadcrumb-item
          %a{ :href => admin_golf_club_path(@golf_club) } #{ @golf_club.name }
        %li.active.breadcrumb-item Global Charge Schedules
  .row
    .col-xs-12
      %ul
        %li Global Tax Settings
        %li Global Line Items Settings
        %li Option to apply line items to all charge schedules
        %li Customized Rates for line items
    .col-xs-12
      = react_component "ChargeScheduleSettings",
        { paths: {admin_golf_club_path:admin_golf_club_path(params[:golf_club_id]), 
          charge_schedules_path:admin_golf_club_line_items_path(params[:golf_club_id])},
        charge_schedules:@golf_club.charge_schedules }
